/* reservations.wxss */
page {
  background-color: #f5f7fa;
  margin: 0;
  padding: 0;
}

.container {
  padding: 24rpx 24rpx;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx; /* 添加间距 */
}

/* 余额卡片样式 */
.balance-card {
  background: linear-gradient(135deg, #4f46e5, #3b82f6);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  color: white;
  margin-bottom: 0 0 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.2);
  width: 90%;
  box-sizing: border-box;
}

.balance-content {
  margin-bottom: 24rpx;
}

.balance-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.balance-amount {
  margin-top: 8rpx;
  display: flex;
  align-items: baseline;
}

.currency {
  font-size: 40rpx;
  margin-right: 8rpx;
}

.amount {
  font-size: 64rpx;
  font-weight: 600;
}

.balance-actions {
  display: flex;
  justify-content: flex-end;
}

.action-button {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  font-size: 26rpx;
  padding: 12rpx 32rpx;
  border-radius: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  line-height: 1.5;
}

/* 预约列表区域样式 */
.reservations-section {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 90%;
  box-sizing: border-box;
  flex: 1;
  min-height: 200rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.section-subtitle {
  font-size: 24rpx;
  color: #6b7280;
}

/* 预约卡片样式 */
.reservation-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid #e5e7eb;
}

.reservation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.court-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.reservation-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 32rpx;
}

.reservation-status.pending {
  background: #fef3c7;
  color: #92400e;
}

.reservation-status.confirmed {
  background: #dcfce7;
  color: #166534;
}

.reservation-status.cancelled {
  background: #fee2e2;
  color: #991b1b;
}

.reservation-details {
  padding: 16rpx 0;
  border-top: 1rpx solid #f3f4f6;
  border-bottom: 1rpx solid #f3f4f6;
}

.detail-item {
  display: flex;
  align-items: center;
  margin: 8rpx 0;
}

.detail-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.detail-item text {
  font-size: 26rpx;
  color: #4b5563;
}

.reservation-footer {
  margin-top: 16rpx;
}

.booking-time {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 空状态样式 */
.empty-state {
  padding: 64rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 32rpx;
}

.primary-button {
  background: #4f46e5;
  color: white;
  font-size: 28rpx;
  padding: 16rpx 48rpx;
  border-radius: 40rpx;
  border: none;
}

.primary-button:active {
  opacity: 0.9;
}